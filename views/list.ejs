
<%- include("header"); -%>
    <div id="heading" class="box">
        <h1><%= listTitle %></h1>

    </div>
    <form action=<%= buttonAction %> method="post">
        <button class="button" type="submit" name="button"><%= buttonTitle %></button>
    </form>

    <div class="box">
        <% for(let i = 0; i < newListItems.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>
        </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newListItem" placeholder="New Item" autocomplete="off">
            <button class="list-button" type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    <%- include("footer"); -%>